FROM public.ecr.aws/lambda/python:3.12

WORKDIR /var/task

RUN microdnf install -y \
    gcc \
    gcc-c++ \
    libpq-devel \
    git \
    && microdnf clean all

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY app/ ./app

COPY alembic/ ./alembic
COPY alembic.ini .

CMD ["app.main.handler"]