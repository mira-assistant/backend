# Use official Python slim image
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies needed for building packages
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libffi-dev \
    libssl-dev \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip and install heavy ML dependencies first (cache layer)
COPY requirements.txt .
RUN pip install --upgrade pip
RUN pip install --no-cache-dir --prefer-binary torch transformers sentence-transformers onnxruntime spacy

# Install the rest of the dependencies
RUN pip install --no-cache-dir -r requirements.txt --no-deps

# Copy application code
COPY . .

# Create a non-root user and set permissions
RUN useradd --create-home app && chown -R app:app /app
USER app

# Expose FastAPI port
EXPOSE 8000

# Default command for development with live reload
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
