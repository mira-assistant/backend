[flake8]
max-line-length = 88
extend-ignore = E501,W503,E203,E402,F401
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    .env,
    build,
    dist,
    *.egg-info,
    .coverage,
    htmlcov,
    .serverless,
    node_modules,
    alembic/versions,
    app/__pycache__,
    app/api/__pycache__,
    app/core/__pycache__,
    app/db/__pycache__,
    app/models/__pycache__,
    app/services/__pycache__,
    app/tests/__pycache__,
    app/tests/integration/__pycache__,
    app/tests/unit/__pycache__
per-file-ignores =
    __init__.py:F401
    app/tests/*:S101,S106
max-complexity = 10
